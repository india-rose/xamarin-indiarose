<mvvm:MvvmPage
    x:Class="IndiaRose.Application.Views.Admin.Collection.WatchIndiagramPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IndiaRose.Application.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:IndiaRose.Business"
    xmlns:application="using:IndiaRose.Application"
    xmlns:mvvm="using:Storm.Mvvm"
    mc:Ignorable="d"
    DataContext="{Binding Source={StaticResource Locator},Path=AdminCollectionWatchIndiagramViewModel}">
    
    <Page.Resources>
        <Style x:Key="TextCategoryStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Text" Value="" />
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="TextFieldStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Text" Value="" />
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <Style x:Key="TextValueStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Text" Value="" />
            <Setter Property="Margin" Value="10"/>
        </Style>

    </Page.Resources>

    <Grid VerticalAlignment="Stretch" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer>
        <StackPanel Grid.Column="0">
            <TextBlock x:Uid="Collection_IndiagramText" Style="{StaticResource TextCategoryStyle}" />
            <TextBlock x:Uid="Collection_IndiagramText" Style="{StaticResource TextValueStyle}" />
            
            <TextBlock x:Uid="Collection_ParentCategory"  Style="{StaticResource TextCategoryStyle}" />
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Uid="Collection_ParentCategoryName" Style="{StaticResource TextFieldStyle}" />
                <TextBlock x:Uid="Collection_ParentCategoryName" Style="{StaticResource TextValueStyle}" />
            </StackPanel>
            
            <TextBlock x:Uid="Collection_Sound"  Style="{StaticResource TextCategoryStyle}" />
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Uid="Collection_ParentCategoryName" Style="{StaticResource TextFieldStyle}" />
                <TextBlock x:Uid="Collection_SoundPath" Style="{StaticResource TextValueStyle}" />
            </StackPanel>
            
            <Button Style="{StaticResource SmallButton}"
            	Background="Blue">
                <TextBlock Style="{StaticResource SmallTextButton}"
            		x:Uid="Collection_ListenSound"/>
            </Button>

            <Button Style="{StaticResource SmallButton}"
            	Background="Green">
                <TextBlock Style="{StaticResource SmallTextButton}"
            		x:Uid="Button_Edit"/>
            </Button>
        </StackPanel>
            </ScrollViewer>

    </Grid>
</mvvm:MvvmPage>

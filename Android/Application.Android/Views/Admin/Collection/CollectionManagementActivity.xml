<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
  <Resources>

  </Resources>
  <LinearLayout>
    <ImageView XmlStyle="{Resource LogoStyle}" />
  </LinearLayout>
  <RelativeLayout
    android:id="Relative"
    android:background="#0000FF">
    <!-- on vera -->
  </RelativeLayout>
  <RelativeLayout
    android:layout_below="@id/Relative">

    <Button XmlStyle="{Resource MediumBlueButtonStyle}"
      Text="{Tr Text,Uid=SelectionIndiagramsHome}"
      Click="{Binding SaveCommand}"
      />
    
    <Button XmlStyle="{Resource MediumGreenButtonStyle}"
      Text="{Tr Text,Uid=SelectionIndiagramsAdd}"
      Click="{Binding SaveCommand}"
      />

    <Button XmlStyle="{Resource MediumOrangeButtonStyle}"
        Text =" {Tr Text,Uid=SelectionIndiagramsNext"
        Click="{Binding BackCommand}"
        />
    
  </RelativeLayout>
  
</RelativeLayout>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
  <Resources>
    <Style Key="Relative"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
           />
    <Style Key="CMPRelative"
      android:layout_marginTop="5dip"
      android:layout_marginBottom="85dip"
      android:layout_below="@id/relative"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="#2E8AEF"
           />
    <Style Key="CMPLinear"
       android:layout_marginTop="5dip"
       android:layout_marginBottom="5dip"
       android:layout_width="fill_parent"
       android:layout_height="75dip"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal"
       android:layout_marginLeft="145dip"
       android:layout_marginRight="145dip"
       android:background="@android:color/white"
           />
  </Resources>

  <RelativeLayout XmlStyle="{Resource Relative}"
      android:id="relative">
      <ImageView XmlStyle="{Resource LogoStyle}" 
         android:layout_alignParentRight="true" />
    </RelativeLayout>
  
    <RelativeLayout XmlStyle="{Resource CMPRelative}">
      <!-- on vera -->
    </RelativeLayout>

    <LinearLayout XmlStyle="{Resource CMPLinear}">

      <Button XmlStyle="{Resource MediumGreenButtonStyle}"
        Text="{Tr Text,Uid=SelectionIndiagramsAdd}"
      
      />

      <Button XmlStyle="{Resource MediumOrangeButtonStyle}"
          Text =" {Tr Text,Uid=SelectionIndiagramsNext}"
          Click="{Binding AddCommand}"
        />

    </LinearLayout>
</RelativeLayout>


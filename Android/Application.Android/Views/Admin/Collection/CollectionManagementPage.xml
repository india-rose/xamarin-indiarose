<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
  <Resources>

  </Resources>
  <LinearLayout
     android:layout_width="wrap_content"
 android:layout_height="wrap_content">
    <ImageView XmlStyle="{Resource LogoStyle}" />
  </LinearLayout>
  <RelativeLayout
     android:layout_width="wrap_content"
 android:layout_height="wrap_content"
    android:id="Relative"
    android:background="#00D4FE">
    <!-- on vera -->
  </RelativeLayout>
  <RelativeLayout
     android:layout_width="wrap_content"
 android:layout_height="wrap_content"
    android:layout_below="@id/Relative">

    <Button XmlStyle="{Resource MediumBlueButtonStyle}"
      Text="{Tr Text,Uid=SelectionIndiagramsHome}"
     
      />

    <Button XmlStyle="{Resource MediumGreenButtonStyle}"
      Text="{Tr Text,Uid=SelectionIndiagramsAdd}"
      
      />

    <Button XmlStyle="{Resource MediumOrangeButtonStyle}"
        Text =" {Tr Text,Uid=SelectionIndiagramsNext}"
        Click="{Binding AddAction}"
        />

  </RelativeLayout>

</RelativeLayout>


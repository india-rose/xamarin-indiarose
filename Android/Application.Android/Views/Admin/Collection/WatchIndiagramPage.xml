<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
  <Resources>
    <Style Key="BlueStyle"
      android:textColor="#006FFF"
         />
    <Style Key="TextViewTitle"
        XmlStyle="{Resource BlueStyle}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:textSize="25sp"
        android:textStyle="italic"
           />
  <Style Key="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:textSize="25sp"
         />
         
  <Style Key="WIcolumn"
        XmlStyle="{Resource column}"
        android:orientation="vertical" />
  </Resources>
  <!-- button edit and remove -->
  <LinearLayout XmlStyle="{Resource Ok_Back_Container}"
       android:id="ButtonContainer">
    <Button XmlStyle="{Resource MediumGreenButtonStyle}"
    Text="{Tr Text, Uid=edit}"
    android:layout_marginLeft="4dip"
             />
    <Button XmlStyle="{Resource MediumOrangeButtonStyle}"
        Text="{Tr Text, Uid=remove}"
             />
  </LinearLayout>
  <!-- logo -->
  <ImageView XmlStyle="{Resource LogoStyle}"
       android:id="Logo"
       android:layout_alignParentRight="true" />

  <LinearLayout
        android:layout_below="@id/Logo"
        android:layout_above="@id/ButtonContainer"
        android:layout_width= "fill_parent"
        android:layout_height="wrap_content"
       >

    <RelativeLayout XmlStyle="{Resource WIcolumn}"
        android:layout_marginLeft="10dip" >
      
      <TextView XmlStyle="{Resource TextViewTitle}"
        Text="{Tr Text, Uid=AIP_Text}"
        android:id="title1"
        />

      <TextView XmlStyle="{Resource TextView}"
        android:layout_below="@id/title1"
        android:id="text1"
        android:text="rainbowdash" />
      
      <TextView XmlStyle="{Resource TextViewTitle}"
        Text="{Tr Text, Uid=AIP_Catego}" 
        android:layout_below="@id/text1"
        android:id="title2"/>

      <TextView XmlStyle="{Resource TextViewTitle}"
        android:layout_below="@id/title2"
        Text="{Tr Text, Uid=AIP_Name}"
        android:id="title3"/>

      <TextView XmlStyle="{Resource TextView}"
        android:layout_below="@id/title2"
        android:layout_toRightOf="@id/title3"
        android:text="pinkipie" />

      <TextView XmlStyle="{Resource TextViewTitle}"
         android:layout_below="@id/title3"
         Text="{Tr Text, Uid=AIP_Sound}"
         android:id="title4"/>
      
      <TextView XmlStyle="{Resource TextViewTitle}"
        android:layout_below="@id/title4"
        Text="{Tr Text, Uid=AIP_FilePath}"
        android:id="title5"/>

      <TextView XmlStyle="{Resource TextView}"
        android:layout_below="@id/title4"
        android:layout_toRightOf="@id/title5"
        android:text="rarity" />
      <Button 
        android:textColor="@android:color/white"
        android:background="@drawable/buttonblue"
        android:layout_width= "200dip"
        android:layout_height="50dip"        
        android:layout_below="@id/title5"
        Text="{Tr Text, Uid=AIP_BHeard}"
        android:layout_marginBottom="20dip"
      />
    </RelativeLayout>
    <!-- midle of the screen -->
    <LinearLayout XmlStyle="{Resource WIcolumn}"
        android:gravity="center" >
      
      <ImageView
        android:scaleType="centerInside"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@raw/root" />
    
    </LinearLayout>
  </LinearLayout> 
</RelativeLayout>
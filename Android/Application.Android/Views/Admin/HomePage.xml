<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@android:color/white"
				android:paddingLeft="50dip"
				android:paddingRight="50dip" 
				>
	<ImageView android:id="Logo"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:layout_centerInParent="true"
			   android:layout_marginTop="10dip"
			   android:scaleType="fitXY"
			   android:src="@drawable/logo" 
			   />

	<LinearLayout android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:layout_below="@id/Logo"
				  android:gravity="center"
				  android:orientation="vertical"
				  android:paddingBottom="25dip"
				  android:paddingTop="25dip" 
				  >
		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="match_parent"
					  android:layout_marginBottom="4dip"
					  android:layout_weight="1"
					  android:gravity="center_horizontal"
					  android:orientation="horizontal" 
					  >
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="4dip"
					android:layout_weight="1"
					android:background="@drawable/buttonblue"
					android:text="{Tr Text, Uid=Home_AppSettings}"
					android:textColor="@android:color/white"
					android:textSize="20sp"
					click="{Binding SettingsCommand}"
					/>
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@drawable/buttongreen"
					android:text="{Tr Text, Uid=Home_CollectionManagement}"
					android:textColor="@android:color/white"
					android:textSize="20sp"
					click="{Binding CollectionManagementCommand}"
					/>
		</LinearLayout>
		
		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="match_parent"
					  android:layout_marginBottom="4dip"
					  android:layout_weight="1"
					  android:gravity="center_horizontal"
					  android:orientation="horizontal" 
					  >
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@drawable/buttonblue"
					android:text="{Tr Text, Uid=Home_VoiceSynthesisUpgrade}"
					android:textColor="@android:color/white"
					android:textSize="20sp"
					click="{Binding InstallVoiceSynthesisCommand}"
					/>
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="4dip"
					android:layout_weight="1"
					android:background="@drawable/buttonblue"
					android:text="{Tr Text, Uid=Home_SendLogs}"
					android:textColor="@android:color/white"
					android:textSize="20sp" 
					click="{Binding SendLogsCommand}"
					/>
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="4dip"
					android:layout_weight="1"
					android:background="@drawable/buttongreen"
					android:text="{Tr Text, Uid=Home_SyncCollection}"
					android:textColor="@android:color/white"
					android:textSize="20sp"
					click="{Binding SyncCollectionCommand}"
					/>
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="4dip"
					android:layout_weight="1"
					android:background="@drawable/buttonpink"
					android:text="{Tr Text, Uid=Home_Help}"
					android:textColor="@android:color/white"
					android:textSize="20sp"
					click="{Binding HelpCommand}"/>
		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
					  android:layout_height="match_parent"
					  android:layout_marginBottom="4dip"
					  android:layout_weight="1"
					  android:gravity="center_horizontal"
					  android:orientation="horizontal" 
					  >
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="4dip"
					android:layout_weight="1"
					android:background="@drawable/buttonred"
					android:text="{Tr Text, Uid=Home_Contact}"
					android:textColor="@android:color/white"
					android:textSize="20sp"
					click="{Binding ContactCommand}"
					/>
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="2"
					android:background="@drawable/buttonorange"
					android:text="{Tr Exit, Uid=Exit}"
					android:textColor="@android:color/white"
					android:textSize="20sp"
					click="{Binding ExitCommand}"
					/>
			<Button android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="4dip"
					android:layout_weight="1"
					android:background="@drawable/buttonviolet"
					android:text="{Tr Text, Uid=Home_Credits}"
					android:textColor="@android:color/white"
					android:textSize="20sp"
					click="{Binding CreditsCommand}"
					/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:conv="using:Storm.Mvvm.Converters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

  <Resources>
    <conv:IntToColorConverter Key="IntToColorConverter" />
  </Resources>

  <RelativeLayout
      android:id="background_color_layout_left"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@android:color/white" >

    <Resources>
      <Converter Key="StringFormatConverter"
                 Class="Storm.Mvvm.Converters.StringFormatConverter" 
                 />
        
      <DataTemplate Key="SpinnerDataTemplate">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                      >
          <TextView android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    text="{Binding Converter={Resource StringFormatConverter}, ConverterParameter='{0}%'}"
                      />
        </LinearLayout>
      </DataTemplate>
      
      <Style Key="TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
      
      <Style Key="ButtonStyle"
          android:layout_width="match_parent"
          android:layout_height="75dip"
          android:layout_margin="4dip"
          android:layout_weight="1"
          android:textColor="@android:color/white"
          android:textSize="15sp" />
    </Resources>

    <ImageView XmlStyle="{Resource LogoStyle}"
        android:id="logo" />

    <TextView XmlStyle="{Resource TextViewStyle}"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/logo"
        android:gravity="center_horizontal"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="80dip"
        Text="{Tr Background_Color_backgroundColorInfo__Text}" />

    <TextView XmlStyle="{Resource TextViewStyle}"
        android:id="background_color_text_color_size"
        android:layout_centerInParent="true"
        Text="{Tr Background_Color_backgroundColorSizeLabel__Text}" />

    <BindableSpinner
        android:id="background_color_spinner_color_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_color_text_color_size"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        adapter="{Binding ZoneHeightCollection, Template={Resource SpinnerDataTemplate}}"
        currentItem="{Binding CurrentSize, Mode=TwoWay, UpdateEvent=CurrentItemChanged}"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

      <Button XmlStyle="{Resource ButtonStyle}"
          android:id="background_color_button_ok"
          android:background="@drawable/buttongreen"
          Text="{Tr Background_Color_ok__Text}"
          Click="{Binding SaveCommand}"/>

      <Button XmlStyle="{Resource ButtonStyle}"
          android:id="background_color_button_cancel"
          android:layout_marginBottom="4dip"
          android:layout_marginRight="4dip"
          android:layout_marginTop="4dip"
          android:background="@drawable/buttonorange"
          Text="{Tr Background_Color_cancel__Text}"
          Click="{Binding BackCommand}"/>
    </LinearLayout>
  </RelativeLayout>

  <LinearLayout
      android:id="RightLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical" >

    <View
        android:id="TopArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="{Binding SettingsService.TopBackgroundColor, Converter={Resource IntToColorConverter}}"
        click="{Binding TopAreaColorCommand}"/>

    <View
        android:id="BottomArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        background="{Binding SettingsService.BottomBackgroundColor, Converter={Resource IntToColorConverter}}"
        click="{Binding BottomAreaColorCommand}"/>
  </LinearLayout>

</LinearLayout>
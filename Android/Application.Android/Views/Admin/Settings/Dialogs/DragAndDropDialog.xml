<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/white"
  android:paddingLeft="50dip"
  android:paddingRight="50dip" >

	<Resources>
		<Converter Key="BooleanNegationConverter"
				   Class="Storm.Mvvm.Converters.BooleanNegationConverter" />

    <Style Key="RadioButtonOnStyle"
    android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="@string/enableText"
           />

    <Style Key="RadioButtonOffStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      android:text="@string/disableText"
           />

    <Style Key="RadioGroupStyle"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:orientation="vertical"
           />

  </Resources>
	
  <RadioGroup XmlStyle="{Resource RadioGroupStyle}" >
	
	<RadioButton XmlStyle="{Resource RadioButtonOnStyle}"
	  checked="{Binding IsDragAndDropEnabled, Mode=TwoWay, UpdateEvent=CheckedChange}"
  />
    
	<RadioButton XmlStyle="{Resource RadioButtonOffStyle}"
     checked="{Binding IsDragAndDropEnabled, Mode=TwoWay, UpdateEvent=CheckedChange, Converter={Resource BooleanNegationConverter}}"
  />
    
  </RadioGroup>


</RelativeLayout>
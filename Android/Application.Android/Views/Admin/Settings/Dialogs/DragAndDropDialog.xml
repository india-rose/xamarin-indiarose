<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              XmlStyle="{Resource RootPaddingLinearLayoutStyle}">

	<TextView XmlStyle="{Resource DialogText}"
	          Text="{Tr Text, Uid=DragAndDrop_Explanation}" />
	<RadioGroup XmlStyle="{Resource DialogRadioGroupStyle}">

		<RadioButton XmlStyle="{Resource DialogRadioButtonStyle}"
		             Text="{Tr Text, Uid=RadioButton_On}"
		             checked="{Binding IsEnabled, Mode=TwoWay, UpdateEvent=CheckedChange}" />

		<RadioButton XmlStyle="{Resource DialogRadioButtonStyle}"
		             Text="{Tr Text, Uid=RadioButton_Off}"
		             checked="{Binding IsDisabled, Mode=TwoWay, UpdateEvent=CheckedChange}" />
	</RadioGroup>

</LinearLayout>
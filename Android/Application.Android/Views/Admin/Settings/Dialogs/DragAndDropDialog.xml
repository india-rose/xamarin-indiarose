<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/white"
  android:paddingLeft="50dip"
  android:paddingRight="50dip" >

  <RadioGroup XmlStyle="{Resource RadioGroupStyle}">

    <RadioButton XmlStyle="{Resource RadioButtonStyle}"
        Text="{Tr Text, Uid=RD_buttonOn}"
		    checked="{Binding IsEnabled, Mode=TwoWay, UpdateEvent=CheckedChange}"
    />

    <RadioButton XmlStyle="{Resource RadioButtonStyle}"
        Text="{Tr Text, Uid=RD_buttonOff}"
		    checked="{Binding IsDisabled, Mode=TwoWay, UpdateEvent=CheckedChange}"
    />
  </RadioGroup>


</RelativeLayout>
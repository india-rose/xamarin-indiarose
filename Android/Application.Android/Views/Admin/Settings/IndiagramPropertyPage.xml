<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:conv="using:Storm.Mvvm.Converters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

  <Resources>
    <conv:StringFormatConverter Key="StringFormatConverter" />

    <DataTemplate Key="IndiagramSizeTemplate">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">

        <TextView android:layout_width="wrap_content"
						  android:layout_height="fill_parent"
						  text="{Binding Converter={Resource StringFormatConverter}, ConverterParameter='{0}x{0}'}"
                      />
      </LinearLayout>
    </DataTemplate>

    <DataTemplate Key="FontSizeTemplate">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">

        <TextView android:layout_width="wrap_content"
						  android:layout_height="fill_parent"
						  text="{Binding Converter={Resource StringFormatConverter}, ConverterParameter='{0}'}"
                      />
      </LinearLayout>
    </DataTemplate>

    <DataTemplate Key="FontTemplate">
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">

        <TextView android:layout_width="wrap_content"
						  android:layout_height="fill_parent"
						  text="{Binding Converter={Resource StringFormatConverter}, ConverterParameter='{0}'}"
                      />
      </LinearLayout>
    </DataTemplate>
  <!-- debut des style ajouter par corentin-->
    <Style Key="IPP_ScrolleStyle"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dip"
           />
    <Style Key="RelativelayoutStyle"        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
           />
    <Style Key="IPP_RelativelayoutStyle"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_marginLeft="15dip"
          android:layout_marginTop="20dip"
     />
    <Style Key="LinearLayoutStyle"
      android:paddingLeft="25dip"
      android:paddingRight="25dip"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
           />
    <Style Key="IPP_LinearLayoutStyle"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:orientation="horizontal" 
           />
  <Style Key="IPP_TextViewBlueStyle"
            android:textColor="#006FFF"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
    <Style Key="TextViewBlueStyle"
            XmlStyle="{Resource IPP_TextViewBlueStyle}"
            android:layout_marginBottom="7dip"
            android:layout_marginTop="7dip"
           />

  <Style Key="BindableSpinerViewStyle"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dip"
            android:layout_marginTop="7dip"
         />

    <Style Key="IPP_BindableSpinerViewStyle"
            android:layout_centerInParent="true"
            android:layout_marginBottom="7dip"
            android:layout_width="150dip"
            android:layout_height="50dip"
         />
  <Style Key="CheckBoxStyle"
            android:layout_marginBottom="7dip"
            android:layout_marginTop="7dip"
            android:textColor="#006FFF"
            android:textSize="14sp" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
  <Style Key="IPP_ButtonStyle"
          android:layout_margin="10dip"
          android:background="@drawable/buttonpurple"
          android:textColor="@android:color/white"
          android:textSize="14sp"
          android:layout_width="wrap_content"
          android:layout_height="95dip"
         />
  <Style Key="IP_ButtonStyle"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="4dip"
        android:layout_weight="1"
         />
  </Resources>

  <ImageView  XmlStyle="{Resource LogoStyle}" />


     <!-- android:id="linear_info" -->
  <LinearLayout XmlStyle="{Resource IPP_LinearLayoutStyle}">
<!-- android:id="relative_left" -->
    <ScrollView XmlStyle="{Resource IPP_ScrolleStyle}">

      <RelativeLayout XmlStyle="{Resource IPP_RelativelayoutStyle}">

        <TextView XmlStyle="{Resource IPP_TextViewBlueStyle}"
            android:layout_alignParentLeft="true"
            android:id="text_image_size"
            Text = "{Tr Text, Uid=imageSizeTitle}"
        />

        <BindableSpinner XmlStyle="{Resource BindableSpinerViewStyle}"
            android:id="spinnerImageSize"
            android:layout_below="@+id/text_image_size"
            adapter="{Binding IndiagramSize, Template={Resource IndiagramSizeTemplate}}"
            currentItem="{Binding IndiagramSize, Mode=TwoWay, UpdateEvent=CurrentItemChanged}"
		              />

        <TextView XmlStyle="{Resource TextViewBlueStyle}"
            android:layout_below="@+id/spinnerImageSize"
            android:id="text_font_label"
            Text = "{Tr Text, Uid=fontTitle}"
         />

        <BindableSpinner XmlStyle="{Resource IPP_BindableSpinerViewStyle}"
            android:id="spinnerFont"
            android:layout_alignLeft="@id/spinnerImageSize"
            android:layout_below="@id/text_font_label"
            adapter="{Binding FontName, Template={Resource FontTemplate}}"
            currentItem="{Binding FontName, Mode=TwoWay, UpdateEvent=CurrentItemChanged}"
					  />

        <TextView XmlStyle="{Resource IPP_TextViewBlueStyle}"
            android:id="text_font_size"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_font_label"
            Text ="{Tr Text,Uid=fontSizeTitle}"
          />

        <BindableSpinner XmlStyle="{Resource BindableSpinerViewStyle}"
            android:id="spinnerSizeFont"
            android:layout_alignLeft="@+id/spinnerImageSize"
            android:layout_below="@+id/text_font_size"
            android:layout_toRightOf="@+id/text_font_size"
            adapter="{Binding FontSize, Template={Resource FontSizeTemplate}}"
            currentItem="{Binding FontSize, Mode=TwoWay, UpdateEvent=CurrentItemChanged}"
                    />

        <CheckBox XmlStyle="{Resource CheckBoxStyle}"
            android:id="checkboxhomecategory"
            android:layout_below="@id/spinnerSizeFont"
            Text ="{Tr Text,Uid=checkboxhomecategory}"
              />

        <CheckBox XmlStyle="{Resource CheckBoxStyle}"
            android:id="checkboxMove"
            android:layout_below="@id/checkboxhomecategory"
            Text =" {Tr Text,Uid=checkboxMove}"
               />


      </RelativeLayout>
    </ScrollView>

    <RelativeLayout XmlStyle="{Resource RelativelayoutStyle}"
        android:id="relative_right" >

      <!--Deuxieme colonne-->
      <CheckBox XmlStyle="{Resource CheckBoxStyle}"
          android:id="checkboxreinforcer"
                Text ="{Tr Text,Uid=reinforcerReadingLabel}"
               />

      <Button XmlStyle="{Resource IPP_ButtonStyle}"
          android:id="button_reinforcer_color"
          android:layout_below="@+id/checkboxreinforcer"
              Text="{Tr Text,Uid=reinforcerColorButton}"
          click="{Binding ReinforcerColorCommand}"
      />

    </RelativeLayout>
  </LinearLayout>
  
  <LinearLayout XmlStyle="{Resource LinearLayoutStyle}"
      android:id="linear_bottom"
      android:layout_above="@+id/linear_info"
      android:layout_alignParentBottom="true"
         >

    <Button XmlStyle="{Resource IP_ButtonStyle}"
        android:id="button_ok"
        android:background="@drawable/buttongreen"
            Text="{Tr Text,Uid=okText}"
        click="{Binding SaveCommand}"/>

    <Button XmlStyle="{Resource IP_ButtonStyle}"
        android:id="button_cancel"
        android:background="@drawable/buttonorange"
        Text =" {Tr Text,Uid=Button_Back}"
        />
  
  </LinearLayout>
</RelativeLayout>
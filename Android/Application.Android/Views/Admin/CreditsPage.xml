<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
  <Resources>
    <Style Key="CreditsButtonContainerStyle"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="horizontal" 
			   />
    <Style key="ScroleLinearLayoutStyle"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingLeft="50dip"
          android:paddingRight="50dip"
          android:paddingBottom="20dip"
          android:paddingTop="20dip"
           />
    <Style Key="LinearLayoutContentStyle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:paddingTop="50dip"
           />
    <Style Key="TextViewRedStyle"
           android:textColor="#E3081C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:textSize="22sp"
          />
    <Style Key="TextViewBlackStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:textSize="20sp"
           />
    <Style Key="TextViewGreenStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0AC808"
            android:textSize="40sp"
           />
    <Style Key="ScrollViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
           />
    <Style Key="CreditsLogoStyle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/logo"
		   />
  </Resources>
  <LinearLayout XmlStyle="{Resource CreditsButtonContainerStyle}" >

    <LinearLayout XmlStyle="{Resource LinearLayoutContentStyle}" >

      <ImageView XmlStyle="{Resource CreditsLogoStyle}"
          android:id="Logo"
         />
    </LinearLayout>

    <ScrollView XmlStyle="{Resource ScrollViewStyle}" >

      <LinearLayout  XmlStyle="{Resource ScroleLinearLayoutStyle}" >

        <TextView XmlStyle="{Resource TextViewGreenStyle}"
            Text="{Tr Text, Uid=Exit}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
            Text="{Tr Text, Uid=Credits_Direction}"
        />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
            Text="{Tr Text, Uid=Credits_DirectionStaff}"
        />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
            Text="{Tr Text, Uid=Credits_graphics}"
           />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
                  Text="{Tr Text, Uid=Credits_graphicsStaff}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
                  Text="{Tr Text, Uid=Credits_Managerial}"
           />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
            Text="{Tr Text, Uid=Credits_ManagerialStaff}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
            Text="{Tr Text, Uid=Credits_Team_2014}"
         />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
            Text="{Tr Text, Uid=Credits_TeamStaff}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
                  Text="{Tr Text, Uid=Credits_Trainee2013}"
         />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
                  Text="{Tr Text, Uid=Credits_TraineeStaff2013}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
                   Text="{Tr Text, Uid=Credits_Trainee2014}"
         />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
                  Text="{Tr Text, Uid=Credits_TraineeStaff2014}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
                  Text="{Tr Text, Uid=Credits_TeamAndroid2013}"
            />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
                  Text="{Tr Text, Uid=Credits_TeamStaffAndroid2013}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
                  Text="{Tr Text, Uid=Credits_TeamAndroid2012}"
           />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
            Text="{Tr Text, Uid=Credits_TeamStaffAndroid2012}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
            Text="{Tr Text, Uid=Credits_TeamAndroid2011}"
           />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
             Text="{Tr Text, Uid=Credits_TeamStaffAndroid2011}"
            />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
            Text="{Tr Text, Uid=Credits_TeamCloud2011}"
           />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
            Text="{Tr Text, Uid=Credits_TeamStaffCloud2011}"
          />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
            Text="{Tr Text, Uid=Credits_TeamWindows2011}"
           />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
            Text="{Tr Text, Uid=Credits_TeamStaffWindows2011}"
             />

        <TextView XmlStyle="{Resource TextViewRedStyle}"
            Text="{Tr Text, Uid=Credits_Supplier}"
             />

        <TextView XmlStyle="{Resource TextViewBlackStyle}"
            Text="{Tr Text, Uid=Credits_Sclera}"
             />
      </LinearLayout>
    </ScrollView>
  </LinearLayout>

</RelativeLayout>
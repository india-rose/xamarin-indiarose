<?xml version="1.0" encoding="utf-8"?>

<Resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Top logo style -->
	<Style Key="BaseLogoStyle"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dip"
	       android:layout_marginLeft="4dip"
	       android:layout_marginRight="4dip"
	       android:scaleType="fitXY"
	       android:src="@drawable/logo" />

	<Style Key="LogoStyle"
	       XmlStyle="{Resource BaseLogoStyle}"
	       android:layout_centerHorizontal="true"
	       android:layout_alignParentTop="true" />

	<Style Key="RootLayoutStyle"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:background="@android:color/white"
	       android:layout_margin="4dip" />

	<Style Key="RootPaddingLayoutStyle"
	       XmlStyle="{Resource RootLayoutStyle}"
	       android:paddingLeft="50dip"
	       android:paddingRight="50dip" />

	<!-- Styles for pages full of buttons -->

	<Style Key="ButtonLineContainerStyle"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:layout_marginBottom="4dip"
	       android:layout_weight="1"
	       android:gravity="center_horizontal"
	       android:orientation="horizontal" />
	<Style Key="ButtonPageContainerStyle"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:gravity="center"
	       android:orientation="vertical"
	       android:paddingBottom="25dip"
	       android:paddingTop="25dip" />


	<!-- Two column root layout -->
	<Style Key="ColumnContainerLayoutStyle"
	       XmlStyle="{Resource RootLayoutStyle}" />

	<Style Key="ColumnContainerLinearLayoutStyle"
	       XmlStyle="{Resource ColumnContainerLayoutStyle}"
	       android:orientation="horizontal" />

	<!-- column layout -->
	<Style Key="ColumnLayoutStyle"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:layout_weight="1" 
		   android:layout_marginLeft="4dip"
		   android:layout_marginRight="4dip"/>

	<Style Key="ColumnLinearLayoutStyle"
	       XmlStyle="{Resource ColumnLayoutStyle}"
	       android:orientation="vertical" />

	<!-- Forms styles -->
	<Style Key="LabelLeftTextStyle"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:textColor="@android:color/black"
	       android:textSize="15sp" />

	<Style Key="SpinnerStyle"
	       android:layout_width="match_parent"
	       android:layout_height="40dip" />

	<Style Key="SpinnerItemLayoutStyle"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"/>

	<Style Key="SpinnerItemTextStyle"
	       android:layout_width="wrap_content"
	       android:layout_height="match_parent"
	       android:textSize="20sp" 
		   android:textColor="@android:color/black"/>

	<Style Key="BaseLabelStyle"
	       android:textColor="#006FFF"
	       android:textSize="18sp" />

	<Style Key="FormLabelStyle"
	       XmlStyle="{Resource BaseLabelStyle}"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:textStyle="italic" />

	<Style Key="FormCheckBoxStyle"
	       XmlStyle="{Resource BaseLabelStyle}"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" />
	
	<Style Key="DefaultTextStyle"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:textSize="16sp"
		   android:textColor="@android:color/black"
		   />

	<!-- tbd -->

	<Style Key="RadioButtonStyle"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" />
	<Style Key="RadioGroupStyle"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="vertical" />

	<Style Key="DialogText"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:textColor="#444444"
	       android:textSize="13sp"
	       marginBottom="2dp" />

	<Style Key="Ok_Back_Container"
	       android:layout_width="match_parent"
	       android:layout_height="75dip"
	       android:layout_alignParentBottom="true"
	       android:gravity="center"
	       android:layout_gravity="center"
	       android:layout_centerInParent="true"
	       android:orientation="horizontal"
	       android:layout_marginBottom="4dip"
	       android:layout_marginTop="4dip" />
	<Style Key="ButtonDialogStyle"
	       android:layout_width="match_parent"
	       android:paddingLeft="10dip"
	       android:layout_height="wrap_content"
	       android:textSize="19sp"
	       android:background="@android:color/white"
	       android:gravity="center|left" />
	<Style Key="LineSeparator"
	       android:layout_width="match_parent"
	       android:layout_height="1px"
	       android:background="#090909" />

	<Style Key="column"
	       android:layout_weight="1"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent" />

</Resources>
<?xml version="1.0" encoding="utf-8"?>

<Resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Top logo style -->
  <Style Key="BaseLogoStyle"
	       XmlStyle="{Resource WrapLayoutStyle}"
	       android:layout_marginTop="10dip"
	       android:layout_marginLeft="4dip"
	       android:layout_marginRight="4dip"
	       android:scaleType="fitXY"
	       android:src="@drawable/logo" />

  <Style Key="LinkStyle"
         XmlStyle="{Resource WrapLayoutStyle}"
         android:autoLink="web"
		     android:textSize="@dimen/LinkSize"
         />

  <Style Key="LogoStyle"
	       XmlStyle="{Resource BaseLogoStyle}"
	       android:layout_centerHorizontal="true"
	       android:layout_alignParentTop="true" />

  <Style Key="BaseRootLayoutStyle"
		     XmlStyle="{Resource MatchLayoutStyle}"
	       android:background="@android:color/white"
			/>

  <Style Key="RootLayoutStyle"
		     XmlStyle="{Resource BaseRootLayoutStyle}"
	       android:layout_margin="4dip" />

  <Style Key="RootLinearLayoutStyle"
	       XmlStyle="{Resource RootLayoutStyle}"
	       android:orientation="vertical" />

  <Style Key="RootPaddingLayoutStyle"
	       XmlStyle="{Resource RootLayoutStyle}"
	       android:paddingLeft="50dip"
	       android:paddingRight="50dip" />

  <Style Key="RootPaddingLinearLayoutStyle"
	       XmlStyle="{Resource RootPaddingLayoutStyle}"
	       android:orientation="vertical" />

  <!-- Styles for pages full of buttons -->

  <Style Key="ButtonLineContainerStyle"
	       XmlStyle="{Resource MatchLayoutStyle}"
	       android:layout_weight="1"
	       android:gravity="center_horizontal"
	       android:orientation="horizontal" />

  <Style Key="ButtonPageContainerStyle"
	       XmlStyle="{Resource MatchLayoutStyle}"
	       android:gravity="center"
	       android:orientation="vertical"
	       android:paddingBottom="@dimen/ButtonPagePadding"
	       android:paddingTop="@dimen/ButtonPagePadding" />

  <!-- Two column root layout -->
  <Style Key="ColumnContainerLinearLayoutStyle"
	       XmlStyle="{Resource RootLayoutStyle}"
	       android:orientation="horizontal" />

  <!-- column layout -->
  <Style Key="ColumnLayoutStyle"
	       XmlStyle="{Resource MatchLayoutStyle}"
	       android:layout_weight="1"
	       android:layout_marginLeft="4dip"
	       android:layout_marginRight="4dip" />

  <Style Key="ColumnLinearLayoutStyle"
	       XmlStyle="{Resource ColumnLayoutStyle}"
	       android:orientation="vertical" />

  <Style Key="ColumnLinearCenterLayoutStyle"
         XmlStyle="{Resource ColumnLinearLayoutStyle}"
         android:layout_gravity="center"
		     android:gravity="center" />

  <!-- Forms styles -->
  <!--<Style Key="LabelLeftTextStyle"
	       XmlStyle="{Resource WrapLayoutStyle}"
	       android:textColor="@android:color/black"
	       android:textSize="15sp" />-->

  <Style Key="SpinnerStyle"
	       android:layout_width="match_parent"
	       android:layout_height="@dimen/SpinnerSize" />

  <!--<Style Key="SpinnerItemLayoutStyle"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent" />-->

  <Style Key="SpinnerItemTextStyle"
	       android:layout_width="wrap_content"
	       android:layout_height="match_parent"
	       android:textSize="@dimen/SpinnerTextSize"
	       android:textColor="@android:color/black" />

  <Style Key="BaseLabelStyle"
         XmlStyle="{Resource WrapLayoutStyle}"
	       android:textColor="#006FFF" />

  <Style Key="FormLabelStyle"
	       XmlStyle="{Resource BaseLabelStyle}"
	       android:textStyle="italic"
		     android:textSize="@dimen/FormTextSize" />


  <Style Key="SmallFormLabelStyle"
		     XmlStyle="{Resource BaseLabelStyle}"
		     android:textSize="@dimen/DefaultTextSize" />
  
  <Style Key="LargeFormLabelStyle"
		     XmlStyle="{Resource BaseLabelStyle}"
		     android:textSize="@dimen/LargeFormLabelTextSize" />

  <Style Key="HeaderLabelStyle"
			   XmlStyle="{Resource LargeFormLabelStyle}"
			   android:layout_marginTop="10dip" />

  <Style Key="HeaderItalicLabelStyle"
			   XmlStyle="{Resource HeaderLabelStyle}"
	       android:textStyle="italic" />

  <Style Key="HeaderTopLabelStyle"
			   XmlStyle="{Resource LargeFormLabelStyle}"
	       android:textStyle="italic" />

  <Style Key="FormCheckBoxStyle"
	       XmlStyle="{Resource BaseLabelStyle}"
		     android:textSize="@dimen/CheckboxTextSize" />

  <Style Key="DefaultTextStyle"
	       XmlStyle="{Resource WrapLayoutStyle}"
	       android:textSize="@dimen/DefaultTextSize"
	       android:textColor="@android:color/black" />

  <Style Key="MatchWrapLayoutStyle"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
         />
  <!--Added-->
  <Style Key="WrapLayoutStyle"
         android:layout_width="wrap_content"
	       android:layout_height="wrap_content"/>
  <!---Added-->
  <Style Key="MatchLayoutStyle"
         android:layout_width="match_parent"
         android:layout_height="match_parent"/>

  <Style Key="HorizontalLinearLayoutStyle"
         XmlStyle="{Resource MatchWrapLayoutStyle}"
	       android:orientation="horizontal" />

  <Style Key="VerticalLinearLayoutStyle"
         XmlStyle="{Resource MatchWrapLayoutStyle}"
	       android:orientation="vertical" />

  <Style Key="ButtonContainerStyle"
		     android:layout_width="match_parent"
		     android:layout_height="@dimen/ButtonContainerSize"
		     android:orientation="horizontal" />

  <Style Key="LineSeparatorStyle"
	       android:layout_width="match_parent"
	       android:layout_height="1dip"
	       android:background="#090909" />

  <!-- ApplicationLookPage -->

  <Style Key="HelpColorTextStyle"
		     XmlStyle="{Resource MatchWrapLayoutStyle}"
		     android:textColor="@android:color/black"
		     android:gravity="center"
		     android:textSize="16sp" />

  <!-- SplashScreen -->

  <Style Key="SplashScreenLayoutStyle"
         XmlStyle="{Resource MatchLayoutStyle}"
         android:orientation="vertical"
         android:background="@android:color/white"
         android:gravity="center" />

  <Style Key="SplashScreenImageStyle"
         XmlStyle="{Resource WrapLayoutStyle}"
         android:gravity="center_horizontal" />

  <Style Key="SplashScreenTextStyle"
         XmlStyle="{Resource WrapLayoutStyle}"
         android:layout_marginTop="25dp"
         android:textColor="@android:color/black" />
  
  <!-- Dummy item to prevent EditView from receiving focus -->
  <Style Key="DummyItem"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

  <Style Key="SeekBarStyle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"/>


<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#00A200"/>
            <stroke
                    android:width="1dp"
                    android:color="#00A200"/>
           
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#008B00"
                    android:endColor="#008B00"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="#008B00"/>
    
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
</selector>